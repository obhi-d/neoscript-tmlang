{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.sfx",
    "name": "sfx",
    "fileTypes": [ ".sfx" ],
    "repository": {
        "hlslRegion" : {
            "name": "markup.hlsl.neoscript",
            "begin": "(^\\{\\{)?\\s*(hlsl):([\\w\\W]*)\\}\\}",
            "end": "^\\{\\{",
            "beginCaptures": {
                "2": {
                    "name": "keyword.control.neoscript"
                },
                "3":{
                    "name": "entity.name.section.neoscript"
                }
            },
            "patterns": [
                {
                    "include": "source.hlsl"
                }
            ]
        },
        "glslRegion" : {
            "name": "markup.glsl.neoscript",
            "begin": "(^\\{\\{)?\\s*(glsl):([\\w\\W]*)\\}\\}",
            "end": "^\\{\\{",
            "beginCaptures": {
                "2": {
                    "name": "keyword.control.neoscript"
                },
                "3":{
                    "name": "entity.name.section.neoscript"
                }
            },
            "patterns": [
                {
                    "include": "source.glsl"
                }
            ]
        }
    },
    "patterns":[
        {"include": "source.neoscript"},
        {"include": "#hlslRegion"},
        {"include": "#glslRegion"}
    ]
}

